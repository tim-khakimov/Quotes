<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:paddingRight="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tvTicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textSize="@dimen/large_text"
        app:layout_constraintLeft_toRightOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="FEES" />

    <TextView
        android:id="@+id/tvLtrAndName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/small_text"
        app:layout_constraintLeft_toLeftOf="@+id/ivLogo"
        app:layout_constraintTop_toBottomOf="@+id/tvTicker"
        tools:text="МСХ | РусГидро" />

    <TextView
        android:id="@+id/tvPcp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textSize="@dimen/large_text"
        app:layout_constraintBottom_toBottomOf="@+id/tvTicker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTicker"
        tools:text="+2.26%"
        tools:textColor="@color/green" />

    <TextView
        android:id="@+id/tvLtpAndChg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textSize="@dimen/small_text"
        app:layout_constraintRight_toRightOf="@+id/tvPcp"
        app:layout_constraintTop_toBottomOf="@+id/tvPcp"
        tools:text="0.210 (+0.000688)" />
</androidx.constraintlayout.widget.ConstraintLayout>
